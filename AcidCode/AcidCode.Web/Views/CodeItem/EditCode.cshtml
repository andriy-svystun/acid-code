@model AcidCode.Common.CodeItem

@{
    ViewBag.Title = "EditCode";
}

<div class="row">
    <h2>Edit code item</h2>
</div>

<div class="row">
    <div class="col-md-10">

        @using (Html.BeginForm("EditCode", "CodeItem", new { returnurl = ViewBag.ReturnUrl} , FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.EntryPoint)

            <div class="form-group">
                @Html.LabelFor(model => model.CodeText, "Code text", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.CodeText, htmlAttributes: new { @class = "form-control edit-code-textarea" })
                    @Html.ValidationMessageFor(model => model.CodeText, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
        }
    </div>
</div>
<div>
    <a href="@ViewBag.ReturlUrl">Back</a>
</div>
