@model AcidCode.Common.GeneralSiteSettings

<div class="container">
    <div class="row text-center">
        <p> <strong> Site general settings </strong> </p>
    </div>

    @using (Html.BeginForm("Index", "Administration", FormMethod.Post, new { role = "form", @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken();
        @Html.HiddenFor(m => m.Settings);

        <div class="form-group row">
            @Html.LabelFor(m => m.CompilationTime, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.CompilationTime, new { @class = "form-control" })
        </div>

        <div class="form-group row">
            @Html.LabelFor(m => m.RunningTime, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.RunningTime, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.RunningTime)
        </div>

        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    }
</div>
